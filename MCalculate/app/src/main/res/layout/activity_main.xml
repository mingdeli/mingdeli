<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp">

    <LinearLayout
        android:background="@drawable/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textColor="#ff846bee"
            android:id="@+id/sign"
            android:editable="false"
            android:background="#aaccff"
            android:layout_marginLeft="2dp"
            android:textSize="50px"
            android:gravity="center"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et"
            android:textColor="#ff2a58ef"
            android:hint="0"
            android:gravity="center|right"
            android:textSize="60px"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:editable="false"
            android:background="#aaccff"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CL"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnclearClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="รท"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btndivideClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ร"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnmultiClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Del"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btndeleteClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn7Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn8Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn9Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnminusClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn4Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn5Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn6Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnplusClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn1Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn2Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn3Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnDotClicked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="0"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btn0Clicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="m"
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnmenuClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="="
            android:textStyle="bold"
            android:background="@drawable/tip"
            android:onClick="btnequalClicked"/>
    </LinearLayout>

</LinearLayout>

